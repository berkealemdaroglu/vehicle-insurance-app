<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/itemLayout">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgBackground"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Small"
        tools:src="@android:color/darker_gray" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/yazi_arka_plan_rengi"
        android:scaleType="fitXY"
        android:src="@drawable/ic_list_text_bg"
        app:layout_constraintBottom_toBottomOf="@id/imgBackground"
        app:layout_constraintEnd_toEndOf="@+id/imgBackground"
        app:layout_constraintStart_toStartOf="@id/imgBackground" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/blogItemTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="2"
        android:minLines="2"
        android:textColor="@color/white"
        android:textSize="@dimen/font_text_16sp"
        app:layout_constraintBottom_toBottomOf="@id/imgBackground"
        app:layout_constraintEnd_toEndOf="@+id/imgBackground"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/imgBackground"
        tools:text="Adaptif HÄ±z Sabitleme daha fazla kazaya sebep oluyor" />

</androidx.constraintlayout.widget.ConstraintLayout>